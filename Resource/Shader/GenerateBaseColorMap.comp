#version 460 core

layout(local_size_x = 32, local_size_y = 32, local_size_z = 1) in;

layout(binding = 0, rgba8) uniform image2D baseColorMap;

uniform vec4 baseColor;

void main()
{
    ivec2 texelCoords = ivec2(gl_GlobalInvocationID.xy);
    vec4 colorRGBA = baseColor;

    imageStore(baseColorMap, texelCoords, colorRGBA);
}